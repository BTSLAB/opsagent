{
  "name": "opsagent-security-suite",
  "version": "1.0.0",
  "description": "Complete runtime security for AI agents - prevent command injection, SSRF, prompt injection, and data exfiltration",
  "main": "skills/security/security",
  "scripts": {
    "test": "bash scripts/test-security-suite.sh",
    "install-skill": "cp -r skills/security ~/.opsagent/skills/",
    "install-hook": "cp -r hooks/security-validator ~/.opsagent/hooks/ && opsagent hooks enable security-validator",
    "install-all": "npm run install-skill && npm run install-hook",
    "validate": "skills/security/security help"
  },
  "keywords": [
    "ai",
    "security", 
    "opsagent",
    "agent",
    "command-injection",
    "ssrf",
    "prompt-injection",
    "cybersecurity",
    "runtime-security",
    "threat-detection"
  ],
  "author": {
    "name": "Graydon Trusler",
    "email": "gt@lexpertai.com",
    "url": "https://x.com/LexpertAI"
  },
  "license": "MIT",
  "homepage": "https://github.com/gtrusler/opsagent-security-suite#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gtrusler/opsagent-security-suite.git"
  },
  "bugs": {
    "url": "https://github.com/gtrusler/opsagent-security-suite/issues"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "os": [
    "darwin",
    "linux"
  ],
  "clawdhub": {
    "skill": true,
    "category": "security",
    "tags": ["security", "validation", "runtime-protection"],
    "requires": {
      "bins": ["bash", "jq"],
      "opsagent": ">=2026.1.0"
    }
  },
  "directories": {
    "doc": "docs",
    "test": "tests"
  }
}